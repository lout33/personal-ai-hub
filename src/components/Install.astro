<section id="get-started" class="py-20 px-6 bg-zinc-100 dark:bg-zinc-900/50">
  <div class="max-w-3xl mx-auto">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold mb-4">Get Started in 30 Seconds</h2>
      <p class="text-zinc-600 dark:text-zinc-400">
        One command. Works with Claude Code, OpenCode, or as a local project.
      </p>
    </div>
    
    <div class="bg-zinc-950 rounded-2xl p-6 mb-8">
      <div class="flex items-center justify-between mb-4">
        <div class="flex items-center gap-2">
          <div class="w-3 h-3 rounded-full bg-red-500"></div>
          <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
          <div class="w-3 h-3 rounded-full bg-green-500"></div>
        </div>
        <button id="copy-btn" class="text-xs text-zinc-500 hover:text-zinc-300 transition-colors flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
          </svg>
          <span id="copy-text">Copy</span>
        </button>
      </div>
      <code id="install-code" class="block font-mono text-sm text-emerald-400 overflow-x-auto">
        curl -fsSL https://raw.githubusercontent.com/lout33/claude_life_assistant/main/install.sh | bash
      </code>
    </div>
    
    <div class="grid md:grid-cols-3 gap-4 text-center">
      <div class="p-4 rounded-xl bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800">
        <div class="text-2xl mb-2">1</div>
        <p class="text-sm text-zinc-600 dark:text-zinc-400">Run the installer</p>
      </div>
      <div class="p-4 rounded-xl bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800">
        <div class="text-2xl mb-2">2</div>
        <p class="text-sm text-zinc-600 dark:text-zinc-400">Edit your AGENTS.md</p>
      </div>
      <div class="p-4 rounded-xl bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800">
        <div class="text-2xl mb-2">3</div>
        <p class="text-sm text-zinc-600 dark:text-zinc-400">Start talking</p>
      </div>
    </div>
    
    <div class="text-center mt-8">
      <a href="https://github.com/lout33/claude_life_assistant#installation" target="_blank" rel="noopener" class="text-sm text-zinc-600 dark:text-zinc-400 hover:text-zinc-900 dark:hover:text-zinc-100 transition-colors">
        View manual installation options â†’
      </a>
    </div>
  </div>
</section>

<script>
  const btn = document.getElementById('copy-btn');
  const code = document.getElementById('install-code');
  const text = document.getElementById('copy-text');
  
  btn?.addEventListener('click', async () => {
    await navigator.clipboard.writeText(code?.textContent?.trim() || '');
    if (text) {
      text.textContent = 'Copied!';
      setTimeout(() => text.textContent = 'Copy', 2000);
    }
  });
</script>
